template <typename TImage, typename TFunctor>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
		  const ExplicitReactionEvolver<TImage, TFunctor> & object )
{
  object.selfDisplay( out );
  return out;
}

