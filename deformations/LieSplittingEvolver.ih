// ----------------------- Standard services ------------------------------


template <typename TEvolver1, typename TEvolver2>
inline
DGtal::LieSplittingEvolver<TEvolver1, TEvolver2>
::LieSplittingEvolver(const Evolver1& anEvolver1, const Evolver2& anEvolver2)
: myEvolver1(anEvolver1), myEvolver2(anEvolver2)
{ 
}


template <typename TEvolver1, typename TEvolver2>
inline
DGtal::LieSplittingEvolver<TEvolver1, TEvolver2>::~LieSplittingEvolver()
{
}


template <typename TEvolver1, typename TEvolver2>
inline
void
DGtal::LieSplittingEvolver<TEvolver1, TEvolver2>::update(Image& aF, const double& aT)
{
  ASSERT(aT >= 0); 

  double t2 = aT/2.0; 
  myEvolver1.update(aF,t2); 
  myEvolver2.update(aF,t2); 

}


template <typename TEvolver1, typename TEvolver2>
inline
void
DGtal::LieSplittingEvolver<TEvolver1, TEvolver2>::selfDisplay ( std::ostream & out ) const
{
  out << "[LieSplittingEvolver]\n";
  out << "\n";
}

template <typename TEvolver1, typename TEvolver2>
inline
bool
DGtal::LieSplittingEvolver<TEvolver1, TEvolver2>::isValid() const
{
    return (myEvolver1.isValid() && myEvolver2.isValid());
}



///////////////////////////////////////////////////////////////////////////////
// Implementation of inline functions                                        //

template <typename TEvolver1, typename TEvolver2>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
		  const LieSplittingEvolver<TEvolver1, TEvolver2> & object )
{
  object.selfDisplay( out );
  return out;
}

